<odoo>
  <data>
    <record id="view_monetary_decimal_inherit" model="ir.ui.view">
      <field name="name">monetary_decimal.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <!-- Find the fields I need to overwrite and change the widget -->
        <field name="amount_untaxed" position="attributes">
          <attribute name="widget">monetary_decimals</attribute>
        </field>
        <field name="amount_tax" position="attributes">
          <attribute name="widget">monetary_decimals</attribute>
        </field>
        <field name="amount_total" position="attributes">
          <attribute name="widget">monetary_decimals</attribute>
        </field>
      </field>
    </record>

  </data>
</odoo>