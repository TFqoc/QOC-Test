<odoo>
  <data>
    <record id="view_mrp_production_inherit" model="ir.ui.view">
      <field name="name">mrp.production.inherit</field>
      <field name="model">mrp.production</field>
      <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <xpath expr='//notebook' position="inside">
          <page string="Clickthrough Data">
            <field name="orderpoint_id" string="Order Point (Reordering Rule)" readonly="1"/>
            <field name="picking_ids" string="Pickings" readonly="1"/>
            <field name="origin" string="Origin"/>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</odoo>